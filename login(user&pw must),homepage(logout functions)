            <option value="+1">+1 (USA)</option>
            <option value="+44">+44 (UK)</option>
            <option value="+91">+91 (India)</option>
            <!-- Add more country codes as needed -->
        </select>
        <input type="text" id="phoneNumber" placeholder="Phone No">
        <input type="text" placeholder="Address">
        <input type="text" placeholder="Create Username">
        <input type="password" id="password" placeholder="Password">
        <i class="fas fa-eye" onclick="togglePassword()"></i>
        <button onclick="signup()">Confirm</button>
        <button onclick="backToLogin()">Back to Login</button>
    </div>
    
    <div id="homePage" class="container hidden">
        <div class="menu-icon" onclick="toggleMenu()">&#9776;</div>
        <div id="menu" class="menu">
            <div class="menu-item" onclick="alert('Settings clicked')">Settings</div>
            <div class="menu-item" onclick="alert('Profile clicked')">Profile</div>
            <div class="menu-item" onclick="alert('Language clicked')">Language</div>
            <div class="menu-item" onclick="showLogoutConfirm()">Logout</div>
        </div>
        <h1>AI-Driven Reminder & Assistant</h1>
        <div class="feature"><i class="fas fa-microphone"></i> Voice & Text Input</div>
        <div class="feature"><i class="fas fa-bell"></i> Smart Notifications</div>
        <div class="feature"><i class="fas fa-calendar-alt"></i> Integrated Calendar & To-Do List</div>
        <div class="feature"><i class="fas fa-heartbeat"></i> Health Reminders</div>
        <div class="feature"><i class="fas fa-smile"></i> Motivation & Appreciation</div>
        <div class="feature"><i class="fas fa-user-shield"></i> Personalized Assistance</div>
        <div class="feature"><i class="fas fa-tasks"></i> Task Breakdown for Big Goals</div>
    </div>
    
    <div id="logoutConfirm" class="logout-confirm hidden">
        <p>Are you sure you want to logout?</p>
        <button onclick="logout()">Confirm</button>
        <button onclick="hideLogoutConfirm()">Cancel</button>
    </div>
</body>
