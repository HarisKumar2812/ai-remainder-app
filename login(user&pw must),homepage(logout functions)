            display: none;
        }
        .menu-item {
            padding: 10px;
            cursor: pointer;
        }
        .menu-item:hover {
            background: #f1f1f1;
        }
        .logout-confirm {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
